import java.io.*;public class FileTest {   public static void main(String[] args) {      // TODO Auto-generated method stub      try      {         FileInputStream inFile = new FileInputStream("D:\\InputData.txt");                  FileOutputStream outFile = new FileOutputStream("D:\\OutputData.txt");                  int data;                  while((data = inFile.read()) != -1)         {            System.out.println(data);            outFile.write(1);         }         inFile.close();         outFile.close();      }      catch(IOException e)      {         System.out.println("오류발생");      }   }}
