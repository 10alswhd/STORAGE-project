import java.io.*;

public class FileReaderTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		try {
		FileReader inFile = new FileReader("J:\\InputData.txt");
		FileWriter outFile = new FileWriter("J:\\OutData.txt");
		int data;
		
		while((data= inFile.read()) != -1)			
		{
			System.out.print((char)data);
			outFile.write(data);
		}
		inFile.close();
		outFile.close();
		} catch (IOException e) {
			System.out.println("오류발생");
		}
	}

}
